# STAVKI Value Betting System - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# The Odds API Configuration
# ============================================================================
# Get your free API key at: https://the-odds-api.com
# Free tier: 500 requests/month

ODDS_API_KEY=your_api_key_here
ODDS_API_BASE=https://api.the-odds-api.com
ODDS_REGIONS=eu
ODDS_MARKETS=h2h
ODDS_ODDS_FORMAT=decimal

# ============================================================================
# Telegram Bot Configuration
# ============================================================================
# Get bot token from @BotFather on Telegram
# Get your user ID from @userinfobot

TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_USERS=your_user_id_here

# ============================================================================
# Application Settings
# ============================================================================

# Dry run mode (no real bets placed)
DRY_RUN=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Data paths
DATA_DIR=data
MODELS_DIR=models
OUTPUTS_DIR=outputs
