# Environment Configuration for STAVKI Value System

# Application Mode
DRY_RUN=true  # Set to false to enable real betting execution (DANGEROUS!)

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Database (future use)
# DATABASE_URL=postgresql://user:pass@localhost/stavki_db

# API Keys (DO NOT commit actual keys!)
# BETFAIR_API_KEY=your_betfair_api_key_here
# PINNACLE_API_KEY=your_pinnacle_api_key_here
# BET365_API_KEY=your_bet365_api_key_here
# ODDS_API_KEY=your_odds_api_key_here

# Twitter/X API (for sentiment analysis)
# TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Telegram Bot (for notifications)
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Model Parameters
MIN_EV_THRESHOLD=0.08  # Minimum 8% edge required
KELLY_FRACTION=0.25    # Conservative Kelly (25%)
MAX_STAKE_PERCENT=5.0  # Max 5% of bankroll per bet

# Bankroll Management
INITIAL_BANKROLL=1000.0  # Initial bankroll in currency units
BANKROLL_CURRENCY=EUR

# Risk Management
MAX_DAILY_LOSS_PERCENT=10.0
MAX_DRAWDOWN_PERCENT=20.0

# Data Sources
DATA_DIR=data/
MODELS_DIR=models/
OUTPUTS_DIR=outputs/
